{
  "name": "bantam-utilities",
  "version": "0.0.1",
  "description": "A set of helper classes for performing common, functional CSS utilities.",
  "author": "Colm Tuite <colmtuite@gmail.com> (http://www.colmtuite.com)",
  "style": "css/css-utilities.css",
  "main": "css/css-utilities.css",
  "files": [
    "css",
    "src"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/colmtuite/css-utilities.git"
  },
  "keywords": [
    "css",
    "oocss",
    "performance",
    "framework",
    "front-end"
  ],
  "license": "MIT",
  "devDependencies": {
    "cssnano": "^3.5.2",
    "postcss": "^5.0.21",
    "precss": "^1.4.0",
    "yargs": "^4.7.1"
  },
  "contributors": [
    {
      "name": "Colm Tuite",
      "email": "colmtuite@gmail.com"
    }
  ],
  "scripts": {
    "start": "npm run build:css && npm run build:minify",
    "build:css": "node ./scripts/postcss src/css-utilities.css css/css-utilities.css",
    "build:minify": "node ./scripts/postcss -m src/css-utilities.css css/css-utilities.min.css",
    "build:watch": "watch 'npm start' ./src/"
  }
}
